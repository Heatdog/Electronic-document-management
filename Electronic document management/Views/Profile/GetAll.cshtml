@using Electronic_document_management.Models;

@model IEnumerable<User>;
@{
    ViewBag.Title = "Users page";
    Layout = "_Layout";
}
<table>
    <caption>Список пользователей</caption>
    <tr>
        <th>№</th>
        <th>Логин</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Почта</th>
        <th>Отдел</th>
        <th>Роль</th>
    </tr>
    @{
        int i = 0;
        foreach (var user in Model)
        {
        <tr>
            <td>@(++i)</td>
            <td><a href="/profile/@user.Id">@user.UserName</a></td>
            <td>@user.Surname</td>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.Department?.Name</td>
            <td>@user.Role</td>
            
        </tr>
        }
    }
</table>